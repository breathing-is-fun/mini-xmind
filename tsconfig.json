{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7"],
    "resolveJsonModule": true,
    "module": "esNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "site"
  },
  "exclude": [
    "node_modules",
    "dist",
    "site",
    "docs",
    "lib",
    "es",
    "**/__tests__/**"
  ]
}
